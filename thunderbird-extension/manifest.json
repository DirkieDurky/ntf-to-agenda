{
    "manifest_version": 3,
    "name": "NTF To Agenda",
    "description": "Reads messages from NTF and adds when you have to work to your agenda",
    "version": "1.0",
    "author": "DirkieDurky",
    "browser_specific_settings": {
        "gecko": {
            "id": "ntf-to-agenda@dirkdev.com",
            "strict_min_version": "78.0"
        }
    },
    "permissions": [
        "messagesRead",
        "accountsRead",
        "storage",
        "menus",
        "notifications",
        "identity",
        "storage"
    ],
    "host_permissions": [
        "https://www.googleapis.com/*",
        "https://accounts.google.com/*"
    ],
    "background": {
        "page": "background.html"
    },
    "icons": {
        "64": "images/ntf-rooster-64px.png",
        "32": "images/ntf-rooster-32px.png",
        "16": "images/ntf-rooster-16px.png"
    }
}
